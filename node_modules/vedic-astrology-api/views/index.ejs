                                lagnaHouse = index + 1;
                                lagnaSignNumber = houseData.signNumber || (index + 1);
                                lagnaSign = houseData.sign || '';
                            }
                        }
                    });
                } else {
                    // If houses is an object, convert to array
                    Object.entries(chartData.houses).forEach(([houseKey, houseData]) => {
