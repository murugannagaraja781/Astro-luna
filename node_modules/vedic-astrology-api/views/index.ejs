            let lagnaHouse = 1;
            let lagnaSign = '';

            // First pass: Extract house data and find Lagna info (but don't force it to position 1)
            if (chartData.houses) {
                // If houses is an array, use it directly
                if (Array.isArray(chartData.houses)) {
                    chartData.houses.forEach((houseData, index) => {
                        if (index < 12) {
